{
  "session.directory": "~/.nvim/sessions",
  "suggest.maxCompleteItemCount": 20,
  "diagnostic.errorSign": "!",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "diagnostic.hintSign": ">>",
  "diagnostic.checkCurrentLine": true,
  "coc.preferences.rootPatterns": [".git"],
  "html.format.enable": true,
  "list.normalMappings": {
    "t": "action:tabe",
    "v": "action:vsplit",
    "s": "action:split"
  },
  "php-cs-fixer.toolPath": "~/.config/composer/vendor/bin/php-cs-fixer"
}
